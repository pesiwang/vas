#ifndef INCLUDE_CORE_VAS_EVENTBASE_H_
#define INCLUDE_CORE_VAS_EVENTBASE_H_

#include "core/VasBuffer.h"
#include "handler/VasClientHandler.h"
#include "handler/VasListenerHandler.h"
#include "handler/VasServerHandler.h"

#include <set>
#include <map>

class VasEventbase {
public:
	enum ServiceState {
		ServiceStateStopped,
		ServiceStateRunning,
		ServiceStateStopping
	};
	enum SocketState {
		SocketStateClosed = 0,
		SocketStateConnecting,
		SocketStateConnected,
		SocketStateClosing
	};
	enum SocketType {
		SocketTypeListener,
		SocketTypeServer,
		SocketTypeClient
	};

	class Socket {
	public:
		SocketType type;
		SocketState state;
		VasAbstractHandler *handler;
		VasBuffer input;
		VasBuffer output;
	};

public:
	static VasEventbase* instance();
	static void stop(int sig);

	void addListenerSocket(int fd, VasListenerHandler *handler);
	void addClientSocket(int fd, VasClientHandler *handler);
	void addServerSocket(int fd, VasServerHandler *handler);
	void connectSocket(int fd);
	void writeSocket(int fd, VasBuffer *buffer);
	void removeSocket(int fd);

	void dispatch();

private:
	VasEventbase();
	virtual ~VasEventbase();


	void _cleanupRunloop();
	void _cleanupService();

private:
	ServiceState _serviceState;
	std::map<int, Socket* > _sockets;
	std::set<int> _closingSockets;
	int _epollFd;
};

#endif /* INCLUDE_CORE_VAS_EVENTBASE_H_ */
